<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:class="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePractice"
    android:orientation="vertical"
    android:id="@+id/layout">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/map_surface_view"
        class="jdn4ae.cs2110.virginia.edu.gamepractice.MapFragment"
        tools:layout="@layout/abc_activity_chooser_view_list_item" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/controller_fragment"
        class="jdn4ae.cs2110.virginia.edu.gamepractice.ControllerFragment"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/character" />



</LinearLayout>
