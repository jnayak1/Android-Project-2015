<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:class="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePractice">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/control_button_width"
        android:layout_height="@dimen/control_button_height"
        android:hapticFeedbackEnabled="true"
        android:id="@+id/up_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding= "@dimen/control_button_padding"
        />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/control_button_width"
        android:layout_height="@dimen/control_button_height"
        android:hapticFeedbackEnabled="true"
        android:id="@+id/right_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/control_button_padding"
        android:layout_centerVertical="true"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/control_button_width"
        android:layout_height="@dimen/control_button_height"
        android:hapticFeedbackEnabled="true"
        android:id="@+id/down_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/control_button_padding"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/control_button_width"
        android:layout_height="@dimen/control_button_height"
        android:hapticFeedbackEnabled="true"
        android:id="@+id/left_button"
        android:padding="@dimen/control_button_padding"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />


    </RelativeLayout>